// Source: https://usaco.guide/general/io

#include <bits/stdc++.h>
using namespace std;

int main() {
	int N, T; cin >> N >> T;
	vector<int> cows(N);
	for(int i = 0; i < N; i++){
		cin >> cows[i];
	}
	for(int i = N-1; i >=0; i--){
		vector<int> u(i);
		int time = 0;
		int counter = 0;
		for(int j = 0; j < i; j++){
			u[j] = cows[j];
			counter ++;
		}
		bool zeros = std::all_of(u.begin(), u.end(), [](int k) { return k==0; });
		while(!zeros){
			for(int j = 0; j < i; j++){
				if(u[j] == 0){
					continue;
				}
				else{
					time += u[j];
					break;
				}
			}
			for(int j = 0; j < i; j++){
				u[j] -= time;
				if(u[j] <= 0){
					if(counter < N){
						u[j] =cows[counter];
						counter ++;
					}
					else{
						u[j] = 0;
					}
				}
			}
			zeros = std::all_of(u.begin(), u.end(), [](int k) { return k==0; });
		}
		if(time <= T){
			cout << time;
			break;
		}
	}
}
